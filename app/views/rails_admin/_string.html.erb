<%
  property_name = property[:name]
  model_name = @abstract_model.to_param
  length = property[:length]
  label = property[:pretty_name]
  required = !property[:nullable?]
%>
                <%= label_tag "#{property_name}", label %>
                
                <%= text_field model_name, property_name, :size => [50, length].min, :maxlength => length, :class => "stringField #{errors_exist ? "errorField" : nil}" %>
