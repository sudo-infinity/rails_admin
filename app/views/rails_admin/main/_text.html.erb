              <%= label_tag "#{field.abstract_model.to_param}_#{field.name}", field.label %>
              <%= text_area field.abstract_model.to_param, field.name, :cols => 80, :class => "#{field.css_class}
               #{field.has_errors? ? "errorField" : nil}", :value => field.value %>
