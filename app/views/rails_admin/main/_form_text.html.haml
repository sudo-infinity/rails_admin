= form.send field.view_helper, field.method_name, field.html_attributes

- if field.ckeditor
  = javascript_tag do
    var CKEDITOR_BASEPATH = '/javascripts/ckeditor/';
  = javascript_include_tag "/javascripts/ckeditor/ckeditor.js"
  = javascript_tag do
    :plain
      jQuery(function($) {
        if(!$("##{form.dom_id(field)}").parents(".fields_blueprint").length) {
          if(!$("#modal").length){
            CKEDITOR.replace('#{form.dom_id(field)}', { customConfig : '#{field.ckeditor_config_js.html_safe}' });
          }
        }
      });
