<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="robots" content="NONE,NOARCHIVE" />
  <title><%= @abstract_model.pretty_name %> | <%= @plugin_name %></title>
  <%= stylesheet_link_tag('rails_admin/base') %>
  <%= stylesheet_link_tag('rails_admin/list') %>

  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js" %>
  <%= javascript_include_tag "rails_admin/jquery.no-conflict.js","rails_admin/rails.js" %>

  <script type="text/javascript">
    $j(document).ready(function($){
      $(".grid .other a, .grid thead a, #pagination a").live("click", function(e){
        e.preventDefault();
        $(this).bind("ajax:success", function(e, data, status, xhr){
          $("#content").html(data);
        });
        $(this).callRemote();
      });
    });
  </script>
</head>
<body>
  <div id="wrapper">
    <div id="header">
      <div id="headerLeft">
        <ul class="breadcrumb">
          <li>
            <%= link_to(t('home.name'), '/') %>
          </li>
          <li>
            &rsaquo;
            <%= link_to(t('admin.dashboard.name'), rails_admin_dashboard_path) %>
          </li>
          <li>
            &rsaquo;
            <%= link_to(@model_config.list.label, rails_admin_list_path(:model_name => @abstract_model.to_param)) %>
          </li>
          <% if @history %>
          <li>
            &rsaquo;
            History
          </li>
          <% end%>
        </ul>
        <h1 id="logo">
          <%= link_to rails_admin_dashboard_path do %>
            <span class="image_replacement"><%= @plugin_name %></span>
          <% end -%>
        </h1>
      </div>
<%= render(:partial => 'rails_admin/main/navigation') %>

      <div id="headerRight">
<%= render(:partial => 'rails_admin/main/user_info', :locals => {:current_user => _current_user}) %>
      </div>
    </div>
    <div id="content">
<%= content_for(:layout) %>
    </div>
  </div>
</body>
</html>
