<% content_for :head do %>
  <title><%= @abstract_model.pretty_name %> | <%= @plugin_name %></title>
  <%= stylesheet_link_tag('rails_admin/list') %>

  <%= javascript_tag do %>
    $j(document).ready(function($){
      $(this).bind("ajax:success", function(e, data, status, xhr){
        $("#content").html(data);
      });
    });
  <% end %>
<% end %>
<%= render(:partial => 'layouts/rails_admin/head') %>
<body>
  <div id="wrapper">
    <% content_for :breadcrumb do %>
      <li><%= link_to(t('home.name'), '/') %></li>
      <li>&rsaquo; <%= link_to(t('admin.dashboard.name'), rails_admin_dashboard_path) %></li>
      <% if @history %>
        <li>&rsaquo; <%= link_to(@model_config.list.label, rails_admin_list_path(:model_name => @abstract_model.to_param)) %></li>
        <li>&rsaquo; <span>History</span></li>
      <% else %>
       <li>&rsaquo; <span><%= @model_config.list.label %></span></li>
      <% end%>
    <% end %>
    <%= render(:partial => 'layouts/rails_admin/header') %>
    <div id="content">
<%= content_for(:layout) %>
    </div>
  </div>
</body>
</html>
